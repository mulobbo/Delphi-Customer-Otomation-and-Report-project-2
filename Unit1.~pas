unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, jpeg, ExtCtrls, StdCtrls, Buttons;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    BitBtn1: TBitBtn;
    Image1: TImage;
    procedure BitBtn1Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
  kalan:integer;

implementation

{$R *.dfm}
  uses unit2,unit3; //form 3 ü ekliyoruz

procedure TForm1.BitBtn1Click(Sender: TObject);


begin
 if kalan=0 then close;  //kalan hakkýn 0 kaldýðýnda kapatýlmasýný saðlýyoruz

if (edit1.Text='utku') and (edit2.Text='1234')and (edit3.Text='1234') then begin   //if ile þifre ve kullanýcý adý metni giriyoruz kullanýcý adý: utku þifre: 1234
showmessage('Kullanýcý Adýnýzý ve Þifrenizi Baþarý Ýle Girdiniz Panele Yönlendiriliyorsunuz...');
tform2.create(self) ;//doðruysa form iki açýlacak
   end
   else begin

   showmessage('Kullanýcý adý ya da þifre yanlýþ.Kalan hakkýnýz : '+inttostr(kalan));//þifre doðru deðilse kalan hakla birlikte tekrar þifre isteyecek
   kalan:=kalan-1;
    end;
end;

procedure TForm1.FormCreate(Sender: TObject);
begin

kalan:=2;   //3 hak için deðer veriyoruz
end;

procedure TForm1.FormClose(Sender: TObject; var Action: TCloseAction);
begin
Action := caFree;   //formun tam kapatýlmasý için kod
end;

end.
